generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Claim {
  id                  String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt           DateTime   @default(now())
  order               String
  status              String
  updatedAt           DateTime   @updatedAt
  scenario            String
  currentScenarioStep Int
  fallback            Boolean
}

enum ClaimStatus {
  IDLE
  IN_PROGRESS
  FAILED
  SUCCEEDED
}